{
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "commonjs",
            "sourceMap": true
        },
        "include": ["test/**/*"]
    },
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "declarationDir": "types",
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["@types/**/*", "src/**/*", "src/structs/dimensions/.ts"],
    "exclude": ["node_modules"]
}
